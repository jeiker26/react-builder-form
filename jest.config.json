{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{js,jsx}",
    "!<rootDir>/src/setupTests.js",
    "!<rootDir>/src/**/index.js",
    "!<rootDir>/node_modules/"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "notify": true,
  "roots": ["<rootDir>/src"],
  "setupFiles": ["<rootDir>/enzyme.config.js"],
  "transform": {
    "^.+\\.(js|jsx)?$": "babel-jest"
  },
  "verbose": false,
  "transformIgnorePatterns": ["<rootDir>/node_modules/"]
}
